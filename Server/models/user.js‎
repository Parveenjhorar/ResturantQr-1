import mongoose from 'mongoose';

const userSchema = new mongoose.Schema({
  name: {
    type: String,
  },
  email: {
    type: String,
  },
  phone: {
    type: Number,
  },
  passwordHash: {
    type: String,
  },
  role: {
    type: String,
    enum: ['customer', 'admin'],
    default: 'customer',
  },
  isActive: {
    type: Boolean,
    default: true,
  },
  totalSpend: {
    type: Number,
    default: 0,
  },
  totalOrders: {
    type: Number,
    default: 0,
  },

  // Fixed loyaltyPoints object
  loyaltyPoints: {
    type: Number,
    default: 0,
  },

  refreshToken: {
    type: String,
  },
  refreshTokenExpiresTime: {
    type: Date,
  },
  lastlogin: {
    type: Date,
    default: Date.now,
  },
});

const User = mongoose.model('User', userSchema);

export default User;





